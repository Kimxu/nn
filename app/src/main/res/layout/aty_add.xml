<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
    <GridView
        android:background="@color/white"
        android:id="@+id/grid_show_icon"
        android:stretchMode="columnWidth"
        android:numColumns="auto_fit"
        android:columnWidth="50dp"
        android:layout_centerInParent="true"
        android:listSelector="@color/white"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:padding="5dp"
        android:layout_above="@+id/tv_show_count"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_show_count"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_alignParentBottom="true"
            android:paddingLeft="5dp"
            android:gravity="center|left"
            android:layout_gravity="bottom" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <TableRow android:layout_weight="1">

                <Button

                    android:id="@+id/b1"
                    style="@style/ButtonAdd"
                    android:text="1" />

                <Button

                    android:id="@+id/b2"

                    style="@style/ButtonAdd"
                    android:text="2" />

                <Button
                    android:id="@+id/b3"
                    style="@style/ButtonAdd"

                    android:text="3" />

                <Button
                    android:id="@+id/bequals"
                    style="@style/ButtonAdd"

                    android:text="=" />
            </TableRow>

            <TableRow

                android:layout_weight="1">

                <Button

                    android:id="@+id/b4"
                    style="@style/ButtonAdd"

                    android:text="4" />

                <Button

                    android:id="@+id/b5"
                    style="@style/ButtonAdd"

                    android:text="5" />

                <Button
                    android:id="@+id/b6"
                    style="@style/ButtonAdd"

                    android:text="6" />

                <Button
                    android:id="@+id/badd"
                    style="@style/ButtonAdd"

                    android:text="+" />
            </TableRow>


        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="7" />

                    <Button
                        android:id="@+id/b8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="8" />

                    <Button
                        android:id="@+id/b9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="9" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bac"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="AC" />

                    <Button
                        android:id="@+id/b0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="0" />

                    <Button
                        android:id="@+id/bpoint"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="." />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/bok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="提交" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>