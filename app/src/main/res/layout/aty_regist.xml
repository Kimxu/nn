<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/gray_normal"
        android:layout_below="@+id/app_name"
        android:textColorHint="@color/grayfont"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/learylout"
        android:drawableLeft="@drawable/login_phone"
        android:drawablePadding="5dp"
        android:hint="@string/username"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:textColorHint="@color/grayfont"
        android:layout_height="50dp"
        android:textColor="@color/gray_normal"
        android:layout_below="@+id/username"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="5dp"
        android:background="@drawable/learylout"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_"
        android:drawableLeft="@drawable/login_lock"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:maxLength="12"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_icon" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/app_name"
        android:textColor="@color/background"
        android:textSize="28sp" />

    <Button
        android:id="@+id/regist"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/password"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_btn_login"
        android:padding="5dp"
        android:text="@string/regist"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/to_regist"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/login"
        android:layout_alignRight="@+id/login"
        android:layout_below="@+id/login"
        android:layout_marginTop="10dp"
        android:text="@string/regist"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@drawable/bg_text_regist" />

    <TextView
        android:id="@+id/login_to_forgot"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@drawable/bg_text_regist"
        android:layout_below="@+id/to_regist"
        android:layout_alignLeft="@+id/to_regist"
        android:layout_alignStart="@+id/to_regist" />


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/clause"
        android:layout_height="wrap_content"
        android:text="阅读和合顺服务条款"
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@drawable/bg_text_clause"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>