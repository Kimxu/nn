<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 亮色皮肤 -->
    <style name="Skin.Light" parent="BaseActivityTheme">
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/background_primary</item>
        <item name="colorAccent">@color/background</item>
        <item name="kThemeBackground">@color/background</item>
        <item name="kThemeBackgroundDark">@color/background_primary</item>
        <item name="buttonBackground">@drawable/bg_btn_login_light</item>
        <item name="menuIcon">@drawable/composer_button_light</item>
    </style>
    <style name="Skin.Light.NoActionBar" parent="Skin.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- 暗色皮肤 -->
    <style name="Skin.Dark" parent="BaseActivityTheme">
        <item name="colorPrimary">@color/dark_background</item>
        <item name="colorPrimaryDark">@color/dark_background_primary</item>
        <item name="colorAccent">@color/dark_background</item>
        <item name="kThemeBackground">@color/dark_background</item>
        <item name="kThemeBackgroundDark">@color/dark_background_primary</item>
        <item name="buttonBackground">@drawable/bg_btn_login_dark</item>
        <item name="menuIcon">@drawable/composer_button_dark</item>
    </style>
    <style name="Skin.Dark.NoActionBar" parent="Skin.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>